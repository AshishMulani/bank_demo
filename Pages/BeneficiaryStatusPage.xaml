<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:bank_demo.ViewModels.FeaturesPages" 
             x:Class="bank_demo.Pages.BeneficiaryStatusPage"
             Title="Beneficiary Status"
             NavigationPage.HasBackButton="True">

    <ContentPage.BindingContext>
        <vm:BeneficiaryStatusViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>

        <Button Text="Add Beneficiary"
                Command="{Binding ListBeneficiaryCommand}"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="8"
                FontSize="16"/>

        <!-- List of Beneficiaries -->
        <ListView ItemsSource="{Binding Beneficiaries}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Description}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>
