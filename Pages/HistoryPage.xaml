<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:bank_demo.ViewModels.FeaturesPages"
             x:Class="bank_demo.Pages.HistoryPage"
             x:DataType="vm:HistoryViewModel"
             Title="Transaction History"
             BackgroundColor="#f8f8f8">

    <ContentPage.BindingContext>
        <vm:HistoryViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="10,10,10,20">

        <Label Text="Transaction History"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Padding="0,20"
               TextColor="Black" />

        <ListView x:Name="TransactionsListView"
                  ItemsSource="{Binding Transactions}"
                  IsGroupingEnabled="True"
                  GroupDisplayBinding="{Binding GroupTitle}"
                  SeparatorVisibility="None"
                  HasUnevenRows="True"
                  BackgroundColor="Transparent">

            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding GroupTitle}"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#444"
                               BackgroundColor="#e0e0e0"
                               Padding="10,5" />
                    </ViewCell>
                </DataTemplate>
            </ListView.GroupHeaderTemplate>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame BackgroundColor="White"
                               Padding="10"
                               Margin="5"
                               BorderColor="#D1D1D1"
                               HasShadow="True"
                               CornerRadius="10"
                               Opacity="1.0">
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <Image Source="{Binding Icon}"
                                       WidthRequest="30"
                                       HeightRequest="30"
                                       VerticalOptions="Center" />

                                <VerticalStackLayout Spacing="5" HorizontalOptions="StartAndExpand">
                                    <Label Text="{Binding Description}"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           TextColor="#333" />
                                    <Label Text="{Binding Amount, StringFormat='â‚¹{0:N2}'}"
                                           FontSize="14"
                                           TextColor="Green" />
                                </VerticalStackLayout>

                                <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}"
                                       FontSize="12"
                                       TextColor="Gray"
                                       HorizontalOptions="End"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </VerticalStackLayout>

</ContentPage>
